<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TravelTech.MainPage">

    <ContentPage.Content>
        <Grid>
            <!-- Main Content -->
            <StackLayout Padding="20,10">
                <!-- Trip Card -->
                <Frame CornerRadius="10" 
                       Padding="15" 
                       Margin="0,0,0,15"
                       BackgroundColor="White"
                       HasShadow="True">
                    <StackLayout Spacing="5">
                        <Label Text="Viaje a Francia"
                               FontSize="16"
                               TextColor="Black"/>

                        <Label Text="Fecha: 31/08/2021" 
                               TextColor="#666666"
                               FontSize="14"/>

                        <Label Text="Presupuesto: $3500"
                               TextColor="#666666"
                               FontSize="14"/>

                        <Label Text="Actividades: Torre Eiffel"
                               TextColor="#666666"
                               FontSize="14"/>

                        <Button Text="VER DETALLES"
                                BackgroundColor="#1a2f4b"
                                TextColor="White"
                                CornerRadius="5"
                                Margin="0,10,0,0"
                                HeightRequest="40"/>
                    </StackLayout>
                </Frame>
            </StackLayout>

            <!-- Bottom Navigation Bar -->
            <Grid RowSpacing="0" 
                  VerticalOptions="End"
                  HeightRequest="60"
                  BackgroundColor="White">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <!-- Home Button -->
                <Label Text="Inicio"
                       Grid.Column="0"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       TextColor="#666666"
                       FontSize="12"/>

                <!-- Add Button -->
                <Frame Grid.Column="1"
                       BackgroundColor="#3498db"
                       CornerRadius="25"
                       HeightRequest="50"
                       WidthRequest="50"
                       Margin="0,-25,0,0"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       Padding="0">
                    <Label Text="+"
                           TextColor="White"
                           FontSize="30"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                </Frame>

                <!-- Calendar Button -->
                <Label Text="o"
                       Grid.Column="2"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       TextColor="#666666"
                       FontSize="12"/>
            </Grid>
        </Grid>
    </ContentPage.Content>

</ContentPage>
