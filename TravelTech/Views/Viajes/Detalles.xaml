<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TravelTech.Views.Viajes.Detalles"
             BackgroundColor="#F5F5F5"
             Title="Travel Tech">

    <ScrollView>
        <Grid RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto"
              ColumnDefinitions="*"
              Padding="0">

            <Frame Grid.Row="0" Padding="0" HasShadow="True" CornerRadius="0" BackgroundColor="White">
                <Grid ColumnDefinitions="Auto, *, Auto" Padding="10,5" HeightRequest="50">
                    <Button Grid.Column="0" Text="≡" FontSize="24" BackgroundColor="Transparent" TextColor="Black" 
                            WidthRequest="40" HeightRequest="40" CornerRadius="0" Padding="0" />
                    <Label Grid.Column="1" Text="Travel Tech" FontSize="18" FontAttributes="Bold" 
                           VerticalOptions="Center" HorizontalOptions="Center" TextColor="Black"/>
                    <Button Grid.Column="2" Text="✈" FontSize="22" BackgroundColor="Transparent" TextColor="Black" 
                            WidthRequest="40" HeightRequest="40" CornerRadius="0" Padding="0" />
                </Grid>
            </Frame>

            <!-- Detalles del viaje -->
            <Label Grid.Row="1" Text="Detalles del viaje" FontSize="30" Margin="15" TextColor="Black" FontAttributes="Bold" />

            <!-- Nombre del viaje -->
            <Label Grid.Row="2" Text="Nombre del viaje:" Margin="15,5,0,0" FontSize="18" TextColor="Black" />
            <Frame Grid.Row="3" CornerRadius="5" BackgroundColor="LightGray" HeightRequest="30" WidthRequest="250" Padding="5"
                   HorizontalOptions="Start" Margin="15,0,5,5">
                <Entry BackgroundColor="LightGray" TextColor="Black" FontSize="12" HeightRequest="20" WidthRequest="180"
                       HorizontalOptions="Fill" Margin="0,-9,0,0" />
            </Frame>

            <!-- Fecha de inicio -->
            <Label Grid.Row="4" Text="Fecha de inicio:" Margin="15,0,0,0" FontSize="18" TextColor="Black" />
            <Frame Grid.Row="5" CornerRadius="5" BackgroundColor="LightGray" HeightRequest="30" WidthRequest="250" Padding="5"
                   HorizontalOptions="Start" Margin="15,0,5,5">
                <DatePicker HorizontalOptions="Fill" Margin="0,-9,0,0" />
            </Frame>

            <!-- Fecha de fin -->
            <Label Grid.Row="6" Text="Fecha de fin:" Margin="15,0,0,0" FontSize="18" TextColor="Black" />
            <Frame Grid.Row="7" CornerRadius="5" BackgroundColor="LightGray" HeightRequest="30" WidthRequest="250" Padding="5"
                   HorizontalOptions="Start" Margin="15,0,5,5">
                <DatePicker HorizontalOptions="Fill" Margin="0,-9,0,0" />
            </Frame>

            <!-- Presupuesto -->
            <Label Grid.Row="8" Text="Presupuesto:" Margin="15,0,0,0" FontSize="18" TextColor="Black" />
            <Frame Grid.Row="9" CornerRadius="5" BackgroundColor="LightGray" HeightRequest="30" WidthRequest="250" Padding="5"
                   HorizontalOptions="Start" Margin="15,0,5,5">
                <Entry Keyboard="Numeric" Margin="0,-9,0,0" />
            </Frame>

            <!-- Botón de editar campos -->
            <Button Grid.Row="10" Text="Editar campos" CornerRadius="50" HorizontalOptions="Center" WidthRequest="300" BackgroundColor="#90EE90" Margin="0,60,0,0" />

            <!-- Menú inferior -->
            <Frame Grid.Row="11" HeightRequest="55" HorizontalOptions="Start" WidthRequest="400" BackgroundColor="#214B81" CornerRadius="20" Margin="0,70,0,0">
                <Grid ColumnDefinitions="*, *, *, *" Padding="0">
                    <Button Grid.Column="0" Text="📜 detalles" FontSize="11" BackgroundColor="#214B81" TextColor="White" />
                    <Button Grid.Column="1" Text="📍 destinos" FontSize="11" BackgroundColor="#214B81" TextColor="White" />
                    <Button Grid.Column="2" Text="🚴 actividades" FontSize="8.6" BackgroundColor="#214B81" TextColor="White" />
                    <Button Grid.Column="3" Text="💴 gastos" FontSize="11" BackgroundColor="#214B81" TextColor="White" />
                </Grid>
            </Frame>

        </Grid>
    </ScrollView>

</ContentPage>