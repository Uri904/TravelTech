<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TravelTech.Views.Viajes.Detalles"
             BackgroundColor="#F5F5F5"
             Title="Travel Tech">

    <FlexLayout Direction="Column" AlignItems="Start" JustifyContent="Start" Padding="0">

        <!-- Header -->
        <Frame Padding="0" HasShadow="True" CornerRadius="0" BackgroundColor="White">
            <FlexLayout Direction="Row" AlignItems="Center" JustifyContent="SpaceBetween" Padding="10,5" HeightRequest="50">
                <Button Text="≡" FontSize="24" BackgroundColor="Transparent" TextColor="Black" 
                            WidthRequest="40" HeightRequest="40" CornerRadius="0" Padding="0" />
                <Label Text="Travel Tech" FontSize="18" FontAttributes="Bold" 
                           VerticalOptions="Center" HorizontalOptions="Center" TextColor="Black"/>
                <Button Text="✈" FontSize="22" BackgroundColor="Transparent" TextColor="Black" 
                            WidthRequest="40" HeightRequest="40" CornerRadius="0" Padding="0" />
            </FlexLayout>
        </Frame>

        <!-- Detalles del viaje -->
        <Label Text="Detalles del viaje" FontSize="30" Margin="15" TextColor="Black" FontAttributes="Bold" />

        <!-- Nombre del viaje -->
        <Label Text="Nombre del viaje:" Margin="15,5,0,0" FontSize="18" TextColor="Black" />
        <Frame CornerRadius="5" BackgroundColor="LightGray" HeightRequest="30" WidthRequest="250" Padding="5"
                   HorizontalOptions="Start" Margin="15,0,5,5">
            <Entry BackgroundColor="LightGray" TextColor="Black" FontSize="12" HeightRequest="20" WidthRequest="180"
                       HorizontalOptions="Fill" Margin="0,-9,0,0" />
        </Frame>

        <!-- Fecha de inicio -->
        <Label Text="Fecha de inicio:" Margin="15,0,0,0" FontSize="18" TextColor="Black" />
        <Frame CornerRadius="5" BackgroundColor="LightGray" HeightRequest="30" WidthRequest="250" Padding="5"
                   HorizontalOptions="Start" Margin="15,0,5,5">
            <DatePicker HorizontalOptions="Fill" Margin="0,-9,0,0" />
        </Frame>

        <!-- Fecha de fin -->
        <Label Text="Fecha de fin:" Margin="15,0,0,0" FontSize="18" TextColor="Black" />
        <Frame CornerRadius="5" BackgroundColor="LightGray" HeightRequest="30" WidthRequest="250" Padding="5"
                   HorizontalOptions="Start" Margin="15,0,5,5">
            <DatePicker HorizontalOptions="Fill" Margin="0,-9,0,0" />
        </Frame>

        <!-- Presupuesto -->
        <Label Text="Presupuesto:" Margin="15,0,0,0" FontSize="18" TextColor="Black" />
        <Frame CornerRadius="5" BackgroundColor="LightGray" HeightRequest="30" WidthRequest="250" Padding="5"
                   HorizontalOptions="Start" Margin="15,0,5,5">
            <Entry Keyboard="Numeric" Margin="0,-9,0,0" />
        </Frame>

        <!-- Botón de editar campos -->
        <Button Text="Editar campos" CornerRadius="50" HorizontalOptions="Center"  WidthRequest="300" BackgroundColor="#90EE90" Margin="30,60,0,0"  />

        <!-- Menú inferior -->
        <Frame HeightRequest="55" HorizontalOptions="Start" WidthRequest="320" BackgroundColor="#214B81" CornerRadius="20" Margin="0,140,0,0">
            <FlexLayout Direction="Row" AlignItems="Center" JustifyContent="SpaceAround" Padding="0">
                <Button Text="📜 detalles" FontSize="11" BackgroundColor="#214B81" TextColor="White" WidthRequest="77" />
                <Button Text="📍 destinos" FontSize="11" BackgroundColor="#214B81" TextColor="White" WidthRequest="77" />
                <Button Text="🚴 actividades" FontSize="8.6" BackgroundColor="#214B81" TextColor="White" WidthRequest="77" />
                <Button Text="💴 gastos" FontSize="11" BackgroundColor="#214B81" TextColor="White" WidthRequest="77" />
            </FlexLayout>
        </Frame>

    </FlexLayout>

</ContentPage>


