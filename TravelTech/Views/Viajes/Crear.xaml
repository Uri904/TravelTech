<!--  CrearViajePage.xaml  -->
<ContentPage
    BackgroundColor="#F5F5F5"
    NavigationPage.HasNavigationBar="False"
    x:Class="TravelTech.Views.Viajes.Crear"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Grid RowDefinitions="Auto,*">

        <!-- Top Menu Bar -->
        <Frame Grid.Row="0" Padding="0" HasShadow="True" CornerRadius="0" BackgroundColor="White">
            <Grid ColumnDefinitions="Auto,*,Auto" Padding="10,5" HeightRequest="50">
                <ImageButton Grid.Column="0"
                     Source="flecha.png"
                     BackgroundColor="Transparent"
                     WidthRequest="30"
                     Clicked="btn_Regresar"
                     HeightRequest="30"/>

                <Label Grid.Column="1"
               FontAttributes="Bold"
               FontSize="24"
               HorizontalOptions="Center"
               Text="Travel Tech"
               TextColor="Black"
               VerticalOptions="Center" />

                <ImageButton Grid.Column="2"
                     Source="avion.png"
                     BackgroundColor="Transparent"
                     WidthRequest="35"
                     HeightRequest="35"/>
            </Grid>
        </Frame>

        <ScrollView BackgroundColor="#F5F5F5" Grid.Row="1">
            <StackLayout Padding="20,15" Spacing="15">
                <Label
                    FontAttributes="Bold"
                    FontSize="24"
                    Margin="0,5,0,15"
                    Text="Crear viaje"
                    TextColor="Black" />

                <Label
                    FontSize="16"
                    Text="Nombre del viaje:"
                    TextColor="Black" />
                <Frame
                    Padding="10,0"
                    BackgroundColor="White"
                    BorderColor="#DDDDDD"
                    CornerRadius="5"
                    HasShadow="False">
                    <Entry
                        x:Name="EntryNombre"
                        HeightRequest="40"
                        Placeholder="Ingrese nombre del viaje"
                        PlaceholderColor="#CCCCCC" />
                </Frame>

                <Label
                    FontSize="16"
                    Margin="0,10,0,0"
                    Text="Fecha de inicio:"
                    TextColor="Black" />
                <Frame
                    Padding="10,0"
                    BackgroundColor="White"
                    BorderColor="#DDDDDD"
                    CornerRadius="5"
                    HasShadow="False">
                    <DatePicker x:Name="DateInicio" HeightRequest="40" />
                </Frame>

                <Label
                    FontSize="16"
                    Margin="0,10,0,0"
                    Text="Fecha de fin:"
                    TextColor="Black" />
                <Frame
                    Padding="10,0"
                    BackgroundColor="White"
                    BorderColor="#DDDDDD"
                    CornerRadius="5"
                    HasShadow="False">
                    <DatePicker x:Name="DateFin" HeightRequest="40" />
                </Frame>

                <Label
                    FontSize="16"
                    Margin="0,10,0,0"
                    Text="Presupuesto:"
                    TextColor="Black" />
                <Frame
                    Padding="10,0"
                    BackgroundColor="White"
                    BorderColor="#DDDDDD"
                    CornerRadius="5"
                    HasShadow="False">
                    <Entry
                        x:Name="EntryPresupuesto"
                        HeightRequest="40"
                        Keyboard="Numeric"
                        Placeholder="Ingrese presupuesto"
                        PlaceholderColor="#CCCCCC" />
                </Frame>

                <Frame
                    Padding="10"
                    BackgroundColor="#FFEBEE"
                    BorderColor="#FFCDD2"
                    CornerRadius="5"
                    Margin="0,15,0,15">
                    <StackLayout Orientation="Horizontal">
                        <Label
                            FontSize="18"
                            Text="⚠"
                            TextColor="#D32F2F"
                            VerticalOptions="Start" />
                        <Label
                            FontSize="14"
                            Text="Nota: Los destinos y actividades se podrán agregar después de crear el viaje."
                            TextColor="#D32F2F" />
                    </StackLayout>
                </Frame>

                <Button
                    BackgroundColor="#1A3A5D"
                    Clicked="btn_CrearViaje"
                    CornerRadius="5"
                    HeightRequest="50"
                    Margin="0,20,0,30"
                    Text="Crear viaje"
                    TextColor="White" />
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>