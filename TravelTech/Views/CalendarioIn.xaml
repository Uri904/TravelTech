<!-- MainPage.xaml -->
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
           x:Class="TravelTech.Views.CalendarioIn"
             BackgroundColor="#F5F5F5">
    <Grid RowDefinitions="Auto,*,60">

        <!-- Top Menu Bar -->
        <Frame Grid.Row="0" Padding="0" HasShadow="True" CornerRadius="0" BackgroundColor="White">
            <Grid ColumnDefinitions="Auto,*,Auto" Padding="10,5" HeightRequest="50">
                <Button Grid.Column="0" Text="≡" FontSize="24" BackgroundColor="Transparent" TextColor="Black" 
                      WidthRequest="40" HeightRequest="40" CornerRadius="0" Padding="0" />
                <Label Grid.Column="1" Text="Travel Tech" FontSize="18" FontAttributes="Bold" 
                      VerticalOptions="Center" HorizontalOptions="Center" TextColor="Black"/>
                <Button Grid.Column="2" Text="✈" FontSize="22" BackgroundColor="Transparent" TextColor="Black" 
                      WidthRequest="40" HeightRequest="40" CornerRadius="0" Padding="0" />
            </Grid>
        </Frame>

        <!-- Main Content -->
        <ScrollView Grid.Row="1" BackgroundColor="#F5F5F5">
            <StackLayout Padding="15,10" Spacing="15">
                <!-- Title -->
                <Label Text="Mis recordatorios" TextColor="Black" FontSize="24" FontAttributes="Bold" Margin="0,5,0,10" />

                <!-- Calendar View -->
                <Frame BackgroundColor="White" CornerRadius="10" HasShadow="True" Padding="10">
                    <StackLayout Spacing="10">
                        <!-- Month Navigation -->
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <Button Grid.Column="0" Text="&lt;" FontSize="18" BackgroundColor="Transparent" 
                                   TextColor="#214B81" WidthRequest="40" />
                            <Label Grid.Column="1" Text="September 2021" FontSize="16" FontAttributes="Bold" 
                                  HorizontalOptions="Center" VerticalOptions="Center" />
                            <Button Grid.Column="2" Text="&gt;" FontSize="18" BackgroundColor="Transparent" 
                                   TextColor="#214B81" WidthRequest="40" />
                        </Grid>

                        <!-- Days of Week Header -->
                        <Grid ColumnDefinitions="*,*,*,*,*,*,*">
                            <Label Grid.Column="0" Text="SUN" FontSize="12" HorizontalOptions="Center" TextColor="#666" />
                            <Label Grid.Column="1" Text="MON" FontSize="12" HorizontalOptions="Center" TextColor="#666" />
                            <Label Grid.Column="2" Text="TUE" FontSize="12" HorizontalOptions="Center" TextColor="#666" />
                            <Label Grid.Column="3" Text="WED" FontSize="12" HorizontalOptions="Center" TextColor="#666" />
                            <Label Grid.Column="4" Text="THU" FontSize="12" HorizontalOptions="Center" TextColor="#666" />
                            <Label Grid.Column="5" Text="FRI" FontSize="12" HorizontalOptions="Center" TextColor="#666" />
                            <Label Grid.Column="6" Text="SAT" FontSize="12" HorizontalOptions="Center" TextColor="#666" />
                        </Grid>

                        <!-- Calendar Grid - Week 1 -->
                        <Grid ColumnDefinitions="*,*,*,*,*,*,*" RowDefinitions="Auto" VerticalOptions="Start">
                            <!-- First day of month is highlighted -->
                            <Frame Grid.Column="0" BackgroundColor="#4CAF50" CornerRadius="15" HeightRequest="30" WidthRequest="30" 
                                  Padding="0" HorizontalOptions="Center">
                                <Label Text="1" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center" />
                            </Frame>
                            <Label Grid.Column="1" Text="2" HorizontalOptions="Center" VerticalOptions="Center" />
                            <Label Grid.Column="2" Text="3" HorizontalOptions="Center" VerticalOptions="Center" />
                            <Label Grid.Column="3" Text="4" HorizontalOptions="Center" VerticalOptions="Center" />
                            <Label Grid.Column="4" Text="5" HorizontalOptions="Center" VerticalOptions="Center" />
                            <Label Grid.Column="5" Text="6" HorizontalOptions="Center" VerticalOptions="Center" />
                            <Label Grid.Column="6" Text="7" HorizontalOptions="Center" VerticalOptions="Center" />
                        </Grid>

                        <!-- Calendar Grid - Week 2 -->
                        <Grid ColumnDefinitions="*,*,*,*,*,*,*" RowDefinitions="Auto" VerticalOptions="Start">
                            <Label Grid.Column="0" Text="8" HorizontalOptions="Center" VerticalOptions="Center" />
                            <Label Grid.Column="1" Text="9" HorizontalOptions="Center" VerticalOptions="Center" />
                            <Label Grid.Column="2" Text="10" HorizontalOptions="Center" VerticalOptions="Center" />
                            <Label Grid.Column="3" Text="11" HorizontalOptions="Center" VerticalOptions="Center" />
                            <Label Grid.Column="4" Text="12" HorizontalOptions="Center" VerticalOptions="Center" />
                            <Label Grid.Column="5" Text="13" HorizontalOptions="Center" VerticalOptions="Center" />
                            <Label Grid.Column="6" Text="14" HorizontalOptions="Center" VerticalOptions="Center" />
                        </Grid>

                        <!-- Calendar Grid - Week 3 -->
                        <Grid ColumnDefinitions="*,*,*,*,*,*,*" RowDefinitions="Auto" VerticalOptions="Start">
                            <Label Grid.Column="0" Text="15" HorizontalOptions="Center" VerticalOptions="Center" />
                            <Label Grid.Column="1" Text="16" HorizontalOptions="Center" VerticalOptions="Center" />
                            <Label Grid.Column="2" Text="17" HorizontalOptions="Center" VerticalOptions="Center" />
                            <Label Grid.Column="3" Text="18" HorizontalOptions="Center" VerticalOptions="Center" />
                            <!-- Day 19 is highlighted in orange -->
                            <Frame Grid.Column="4" BackgroundColor="#FF5722" CornerRadius="15" HeightRequest="30" WidthRequest="30" 
                                  Padding="0" HorizontalOptions="Center">
                                <Label Text="19" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center" />
                            </Frame>
                            <Label Grid.Column="5" Text="20" HorizontalOptions="Center" VerticalOptions="Center" />
                            <Label Grid.Column="6" Text="21" HorizontalOptions="Center" VerticalOptions="Center" />
                        </Grid>

                        <!-- Calendar Grid - Week 4 -->
                        <Grid ColumnDefinitions="*,*,*,*,*,*,*" RowDefinitions="Auto" VerticalOptions="Start">
                            <Label Grid.Column="0" Text="22" HorizontalOptions="Center" VerticalOptions="Center" />
                            <Label Grid.Column="1" Text="23" HorizontalOptions="Center" VerticalOptions="Center" />
                            <Label Grid.Column="2" Text="24" HorizontalOptions="Center" VerticalOptions="Center" />
                            <Label Grid.Column="3" Text="25" HorizontalOptions="Center" VerticalOptions="Center" />
                            <Label Grid.Column="4" Text="26" HorizontalOptions="Center" VerticalOptions="Center" />
                            <Label Grid.Column="5" Text="27" HorizontalOptions="Center" VerticalOptions="Center" />
                            <Label Grid.Column="6" Text="28" HorizontalOptions="Center" VerticalOptions="Center" />
                        </Grid>

                        <!-- Calendar Grid - Week 5 -->
                        <Grid ColumnDefinitions="*,*,*,*,*,*,*" RowDefinitions="Auto" VerticalOptions="Start">
                            <Label Grid.Column="0" Text="29" HorizontalOptions="Center" VerticalOptions="Center" />
                            <Label Grid.Column="1" Text="30" HorizontalOptions="Center" VerticalOptions="Center" />
                            <Label Grid.Column="2" Text="31" HorizontalOptions="Center" VerticalOptions="Center" />
                            <Label Grid.Column="3" Text="" HorizontalOptions="Center" VerticalOptions="Center" />
                            <Label Grid.Column="4" Text="" HorizontalOptions="Center" VerticalOptions="Center" />
                            <Label Grid.Column="5" Text="" HorizontalOptions="Center" VerticalOptions="Center" />
                            <Label Grid.Column="6" Text="" HorizontalOptions="Center" VerticalOptions="Center" />
                        </Grid>
                    </StackLayout>
                </Frame>

                <!-- Trip Cards -->
                <!-- Trip 1 with Green badge -->
                <Frame BackgroundColor="White" Padding="15" CornerRadius="10" HasShadow="True">
                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                        <StackLayout Grid.Column="0" Grid.Row="0">
                            <Label Text="Viaje a Francia—Subir a la Torre Eiffel" TextColor="Black" FontSize="16" FontAttributes="Bold" />
                            <Label Text="Fecha: 1/9/2021 - No te lo puedes perder" TextColor="#666" FontSize="14" />
                            <Label Text="Importancia: Alta" TextColor="#666" FontSize="14" />
                        </StackLayout>

                        <Frame Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" 
                               BackgroundColor="#4CAF50" CornerRadius="15" 
                               HeightRequest="30" WidthRequest="30" 
                               Padding="0" VerticalOptions="Center">
                            <Label Text="1" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center" />
                        </Frame>

                        <Label Grid.Column="0" Grid.Row="1" Text="Confirmado" TextColor="#4CAF50" FontSize="14" Margin="0,5,0,0" />
                    </Grid>
                </Frame>

                <!-- Trip 2 with Orange badge -->
                <Frame BackgroundColor="White" Padding="15" CornerRadius="10" HasShadow="True">
                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                        <StackLayout Grid.Column="0" Grid.Row="0">
                            <Label Text="Viaje a Francia—Recorrer Montmartre" TextColor="Black" FontSize="16" FontAttributes="Bold" />
                            <Label Text="Fecha: 19/9/2021 - Tomar muchas fotos" TextColor="#666" FontSize="14" />
                            <Label Text="Importancia: Media" TextColor="#666" FontSize="14" />
                        </StackLayout>

                        <Frame Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" 
                               BackgroundColor="#FF5722" CornerRadius="15" 
                               HeightRequest="30" WidthRequest="30" 
                               Padding="0" VerticalOptions="Center">
                            <Label Text="19" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center" />
                        </Frame>

                        <Label Grid.Column="0" Grid.Row="1" Text="Pendiente" TextColor="#FF5722" FontSize="14" Margin="0,5,0,0" />
                    </Grid>
                </Frame>
            </StackLayout>
        </ScrollView>

        <!-- Bottom Navigation Bar with Larger Circle Button -->
        <Grid Grid.Row="2" ColumnDefinitions="*,Auto,*" BackgroundColor="#A5CAEF">
            <!-- Home Button -->
            <Button Grid.Column="0" 
                  Text="🏠" FontSize="24" 
                  BackgroundColor="Transparent" 
                  HorizontalOptions="Center" VerticalOptions="Center" />

            <!-- Container for floating add button -->
            <Grid Grid.Column="1" VerticalOptions="Center" HorizontalOptions="Center">
                <Frame BackgroundColor="#214B81" CornerRadius="30" 
                      HeightRequest="60" WidthRequest="60" 
                      Margin="0,-10,0,0"
                      Padding="0" IsClippedToBounds="True" HasShadow="True"
                      VerticalOptions="Center" HorizontalOptions="Center">
                    <Label Text="+" TextColor="White" FontSize="36" 
                          HorizontalOptions="Center" VerticalOptions="Center"
                          HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                </Frame>
            </Grid>

            <!-- Calendar Button -->
            <Button Grid.Column="2" 
                  Text="📅" FontSize="24" 
                  BackgroundColor="Transparent" 
                  HorizontalOptions="Center" VerticalOptions="Center" />
        </Grid>
    </Grid>
</ContentPage> 