<!--  AgregarDestinoPage.xaml  -->
<ContentPage
    BackgroundColor="#F5F5F5"
    NavigationPage.HasNavigationBar="False"
    x:Class="TravelTech.Views.Destinos.Crear"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Grid RowDefinitions="Auto,*">
        <!-- Top Menu Bar -->
        <Frame Grid.Row="0" Padding="0" HasShadow="True" CornerRadius="0" BackgroundColor="White">
            <Grid ColumnDefinitions="Auto,*,Auto" Padding="10,5" HeightRequest="50">
                <ImageButton Grid.Column="0"
                     Source="flecha.png"
                     BackgroundColor="Transparent"
                     WidthRequest="30"
                     Clicked="btn_Regresar"
                     HeightRequest="30"/>

                <Label Grid.Column="1"
               FontAttributes="Bold"
               FontSize="24"
               HorizontalOptions="Center"
               Text="Travel Tech"
               TextColor="Black"
               VerticalOptions="Center" />

                <ImageButton Grid.Column="2"
                     Source="avion.png"
                     BackgroundColor="Transparent"
                     WidthRequest="35"
                     HeightRequest="35"/>
            </Grid>
        </Frame>


        <!--  Main Content  -->
        <ScrollView BackgroundColor="#F5F5F5" Grid.Row="1">
            <StackLayout Padding="20,15" Spacing="15">
                <!--  Title  -->
                <Label
                    FontAttributes="Bold"
                    FontSize="24"
                    Margin="0,5,0,15"
                    Text="Nuevo Destino"
                    TextColor="Black" />

                <!--  Nombre  -->
                <Label
                    FontSize="16"
                    Text="Nombre:"
                    TextColor="Black" />
                <Frame
                    Padding="10,0"
                    BackgroundColor="White"
                    BorderColor="#DDDDDD"
                    CornerRadius="5"
                    HasShadow="False">
                    <Entry
                        HeightRequest="40"
                        Placeholder="Ingresa el nombre del destino"
                        PlaceholderColor="#CCCCCC"
                        x:Name="EntryDestino"/>
                </Frame>

                <!--  Prioridad  -->
                <Label
                    FontSize="16"
                    Margin="0,10,0,0"
                    Text="Prioridad:"
                    TextColor="Black" />
                <StackLayout Orientation="Horizontal" Spacing="15">
                    <RadioButton Content="Alta" GroupName="prioridad" x:Name="rbAlta"/>
                    <RadioButton Content="Media" GroupName="prioridad" x:Name="rbMedia"/>
                    <RadioButton Content="Baja" GroupName="prioridad" x:Name="rbBaja"/>
                </StackLayout>

                <!--  Notas  -->
                <Label
                    FontSize="16"
                    Margin="0,10,0,0"
                    Text="Notas:"
                    TextColor="Black" />
                <Frame
                    Padding="10"
                    BackgroundColor="White"
                    BorderColor="#DDDDDD"
                    CornerRadius="5"
                    HasShadow="False"
                    HeightRequest="100">
                    <Editor
                        AutoSize="TextChanges"
                        HeightRequest="90"
                        Placeholder="Escribe notas adicionales"
                        PlaceholderColor="#CCCCCC" 
                        x:Name="EntryNota"/>
                </Frame>

                <!--  Submit Button  -->
                <Button
                    BackgroundColor="#2196F3"
                    CornerRadius="5"
                    HeightRequest="50"
                    Margin="0,20,0,30"
                    Text="Agregar destino"
                    TextColor="White"
                    Clicked="btn_AgregarDestino"/>
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>